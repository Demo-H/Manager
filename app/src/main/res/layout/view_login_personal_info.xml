<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_171dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name_logo"
        android:textSize="@dimen/large_24sp"
        android:textColor="@color/color_4c5153"/>
    <LinearLayout
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_img"
            android:layout_width="@dimen/dimen_66dp"
            android:layout_height="@dimen/dimen_66dp"
            android:layout_marginTop="@dimen/dimen_88dp"
            android:layout_gravity="center_horizontal"
            fresco:placeholderImage="@mipmap/login_user_ic"
            fresco:roundedCornerRadius="@dimen/dimen_33dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/normal_l"/>
        <TextView
            android:id="@+id/user_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_686868"
            android:textSize="@dimen/small"/>
    </LinearLayout>

</LinearLayout>