<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.me.activity.SettingActivity"
    android:background="#eff4f4">

    <include android:id="@+id/title_layout"
        layout="@layout/tool_bar_full_layout"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/white">
        <RelativeLayout android:id="@+id/change_psw_layout"
            style="@style/me_layout_item_style">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:textSize="@dimen/normal_s"
                android:textColor="@color/color_343434"
                android:text="修改密码"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/me_list_arrow_ic"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_dddddd"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/about_layout"
            android:layout_below="@id/change_psw_layout"
            style="@style/me_layout_item_style">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:textSize="@dimen/normal_s"
                android:textColor="@color/color_343434"
                android:text="关于"/>

            <ImageView android:id="@+id/arrow_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/me_list_arrow_ic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/arrow_img"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/normal_s"
                android:textColor="#b5c3c3"
                android:text="v1.0"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_dddddd"/>
        </RelativeLayout>
    </RelativeLayout>





    <RelativeLayout android:id="@+id/exit_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        style="@style/me_layout_item_style"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e86767"
            android:textSize="@dimen/normal_s"
            android:text="退出登录"/>
    </RelativeLayout>
</RelativeLayout>