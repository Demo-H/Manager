<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tool_bar_full_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:textSize="@dimen/normal_s"
            android:textColor="@color/color_343434"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:layout_below="@id/content_tv"
            android:textSize="@dimen/small_x"
            android:textColor="#b5c3c3"
            android:gravity="center_vertical"
            android:text="2018.12.20 20:20"/>


    </RelativeLayout>
</LinearLayout>