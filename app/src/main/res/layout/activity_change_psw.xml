<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff4f4">
    <include layout="@layout/tool_bar_full_layout"/>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp">
                <EditText
                    android:id="@+id/old_psw_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38dp"
                    android:background="@drawable/bg_change_psw_edit_text"
                    android:textColor="@color/color_1fbbb9"
                    android:textSize="@dimen/normal_s"
                    android:hint="请输入旧密码"
                    android:maxLines="1"
                    android:textColorHint="@color/color_c6d4d4"
                    android:gravity="left|center_vertical"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dimen_10dp"/>

                <ImageView
                    android:id="@+id/old_psw_clear"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@mipmap/login_delete_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/code_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_38dp"
                        android:background="@drawable/bg_change_psw_edit_text"
                        android:textColor="@color/color_1fbbb9"
                        android:textSize="@dimen/normal_s"
                        android:hint="@string/input_sms_code"
                        android:textColorHint="@color/color_c6d4d4"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:maxLines="1"/>
                    <ImageView
                        android:id="@+id/code_clear"
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:background="@mipmap/login_delete_btn"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_12dp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/code_img"
                    android:layout_height="@dimen/dimen_38dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_15dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp">
                <EditText
                    android:id="@+id/new_psw"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38dp"
                    android:background="@drawable/bg_change_psw_edit_text"
                    android:textColor="@color/color_1fbbb9"
                    android:textSize="@dimen/normal_s"
                    android:hint="请输入您的6位数字新密码"
                    android:textColorHint="@color/color_c6d4d4"
                    android:gravity="left|center_vertical"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_10dp"/>

                <ImageView
                    android:id="@+id/new_psw_clear"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@mipmap/login_delete_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp">
                <EditText
                    android:id="@+id/new_psw_again"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_38dp"
                    android:background="@drawable/bg_change_psw_edit_text"
                    android:textColor="@color/color_1fbbb9"
                    android:textSize="@dimen/normal_s"
                    android:hint="请确认您的6位数字新密码"
                    android:textColorHint="@color/color_c6d4d4"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:maxLines="1"
                    android:inputType="textPassword"/>
                <ImageView
                    android:id="@+id/new_psw_again_clear"
                    android:layout_width="@dimen/dimen_15dp"
                    android:layout_height="@dimen/dimen_15dp"
                    android:background="@mipmap/login_delete_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_38dp"
                android:layout_marginTop="@dimen/dimen_21dp"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:background="@drawable/bg_login_button"
                android:textColor="@color/white"
                android:text="确认修改"
                android:textSize="@dimen/normal_s"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>