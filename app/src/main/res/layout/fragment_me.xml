<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_171dp"
        android:background="@mipmap/me_top_bg"
        android:paddingTop="@dimen/dimen_38dp"
        android:paddingLeft="@dimen/dimen_38dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/large_19sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_uid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/small"
            android:textColor="#c8eeed"
            android:text="工号："/>

        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_uid_text"
            android:layout_marginTop="@dimen/dimen_18dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/small"
            android:textColor="@color/white"
            android:text=""/>


        <TextView
            android:id="@+id/tv_position_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_uid_text"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/small"
            android:textColor="#c8eeed"
            android:text="职位："/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_uid_text"
            android:layout_toRightOf="@id/tv_position_text"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textSize="@dimen/small"
            android:textColor="@color/white"
            android:text=""/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_img"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_36dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/me_avatar_ic"
            fresco:placeholderImage="@mipmap/me_avatar_ic"
            fresco:roundedCornerRadius="@dimen/dimen_40dp"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/rl_setting"
        style="@style/me_layout_item_style">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:textSize="@dimen/normal_s"
            android:textColor="@color/color_343434"
            android:text="设置"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/me_list_arrow_ic"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_dddddd"/>
    </RelativeLayout>

</LinearLayout>